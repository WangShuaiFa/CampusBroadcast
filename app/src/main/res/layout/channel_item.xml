<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/channel_Image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="center"/>
        <TextView
            android:id="@+id/channel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="频道名"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:id="@+id/sep"
                android:layout_width="2dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:background="#00CC00" />
            <TextView
                android:id="@+id/broadcast_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主播名"
                android:layout_toRightOf="@id/sep"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/broadcast_name"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_sex"
                android:visibility="visible"
                 />
            <ImageView
                android:id="@+id/be_focused"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/sex"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_be_focused"
                android:visibility="visible"
                />
            <TextView
                android:id="@+id/be_focused_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝人数"
                android:layout_toRightOf="@id/be_focused"
                android:layout_marginLeft="8dp"/>
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>