<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="15dp"
    android:background="@color/subjectColor">
    <com.newthread.campusbroadcast.util.CircleImageView
        android:id="@+id/head_image1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/head"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head_image1"
        android:text="(点击上传头像)"
        android:textColor="#696969"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_toRightOf="@+id/head_image1"
        android:layout_marginTop="40sp"
        android:text="young_2333"
        android:textSize="22sp"/>
    <TextView
        android:id="@+id/credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="信用值"
        android:layout_toRightOf="@+id/name"
        android:layout_marginTop="50sp"
        />



</RelativeLayout>
